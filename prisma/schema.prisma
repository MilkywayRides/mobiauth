generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Better Auth Core Tables ────────────────────────────

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  role          String    @default("user") // user | admin | super_admin
  banned        Boolean?
  banReason     String?
  banExpires    DateTime?
  twoFactorEnabled Boolean @default(false)
  twoFactorSecret  String?
  backupCodes      String[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  sessions      Session[]
  accounts      Account[]
  qrLoginTokens QrLoginToken[]
  oauthClients  OAuthClient[]
  apiKeys       ApiKey[]
  authorizations OAuthAuthorization[]
  auditLogs     AuditLog[]

  @@map("user")
}

model Session {
  id                   String   @id @default(cuid())
  userId               String
  token                String   @unique
  expiresAt            DateTime
  ipAddress            String?
  userAgent            String?
  impersonatedBy       String?
  activeOrganizationId String?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
}

// ─── QR Code Login ──────────────────────────────────────

model QrLoginToken {
  id        String   @id @default(cuid())
  token     String   @unique
  nonce     String   @default("")
  userId    String?
  expiresAt DateTime
  status    String   @default("pending") // pending | confirmed | used | expired
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([token])
  @@index([status, expiresAt])
  @@map("qr_login_token")
}

// ─── OAuth Provider System ──────────────────────────────

model OAuthClient {
  id            String   @id @default(cuid())
  clientId      String   @unique
  clientSecret  String
  name          String
  description   String?
  logo          String?
  website       String?
  redirectUris  String[] // Array of allowed redirect URIs
  scopes        String[] @default(["profile", "email"]) // Allowed scopes
  userId        String   // Owner of the OAuth app
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user           User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  authorizations OAuthAuthorization[]
  tokens         OAuthToken[]

  @@index([clientId])
  @@index([userId])
  @@map("oauth_client")
}

model OAuthAuthorization {
  id        String   @id @default(cuid())
  userId    String
  clientId  String
  scopes    String[]
  createdAt DateTime @default(now())
  expiresAt DateTime

  user   User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  client OAuthClient @relation(fields: [clientId], references: [clientId], onDelete: Cascade)

  @@unique([userId, clientId])
  @@index([userId])
  @@index([clientId])
  @@map("oauth_authorization")
}

model OAuthToken {
  id                   String   @id @default(cuid())
  accessToken          String   @unique
  refreshToken         String?  @unique
  clientId             String
  userId               String
  scopes               String[]
  codeChallenge        String?
  codeChallengeMethod  String?
  expiresAt            DateTime
  createdAt            DateTime @default(now())

  client OAuthClient @relation(fields: [clientId], references: [clientId], onDelete: Cascade)

  @@index([accessToken])
  @@index([refreshToken])
  @@index([clientId])
  @@map("oauth_token")
}

model ApiKey {
  id          String   @id @default(cuid())
  key         String   @unique
  name        String
  userId      String
  scopes      String[] @default(["read:user"])
  rateLimit   Int      @default(1000) // Requests per hour
  active      Boolean  @default(true)
  lastUsedAt  DateTime?
  expiresAt   DateTime?
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([key])
  @@index([userId])
  @@map("api_key")
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String   // login, logout, password_change, 2fa_enable, etc.
  ipAddress String?
  userAgent String?
  metadata  Json?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_log")
}
